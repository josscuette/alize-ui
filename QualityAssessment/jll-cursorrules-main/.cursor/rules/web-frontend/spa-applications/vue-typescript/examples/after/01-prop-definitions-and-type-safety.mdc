//     validator: (value: string) => 
//       ['syncing', 'synced', 'version-conflict', 'error'].includes(value)
//   },
//   user: {
//     type: Object as PropType<User>,
//     required: true
//   },
//   count: {
//     type: Number,
//     default: 0
//   }
// })

// ✅ GOOD: Typed emits interface
interface Emits {
  (e: 'update', user: User): void;
  (e: 'delete', userId: string): void;
}

const emit = defineEmits<Emits>();

// ✅ GOOD: Type-safe function with proper validation
const updateUser = () => {
  // TypeScript ensures user has all required properties
  emit('update', {
    id: props.user.id,
    name: props.user.name,
    email: props.user.email
  });
};

// ✅ GOOD: Compile-time type checking prevents:
// - Invalid status values (only allows the 4 specified strings)
// - Missing user properties (TypeScript will error)
// - Wrong count type (must be number or undefined)
</script>

