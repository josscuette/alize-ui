<script setup lang="ts">
import type { PropType } from 'vue';

// ✅ GOOD: Proper TypeScript interfaces
interface User {
  id: string;
  name: string;
  email: string;
}

// ✅ GOOD: Detailed prop definitions with TypeScript
interface Props {
  status: 'syncing' | 'synced' | 'version-conflict' | 'error';
  user: User;
  count?: number;
}

// ✅ GOOD: Runtime validation with TypeScript types
const props = withDefaults(defineProps<Props>(), {
  count: 0
});

// Alternative approach with runtime validation:
// const props = defineProps({
