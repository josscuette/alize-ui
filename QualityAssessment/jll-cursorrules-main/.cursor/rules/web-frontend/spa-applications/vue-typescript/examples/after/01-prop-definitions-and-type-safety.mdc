<template>
  <div class="user-card">
    <h3 class="user-card__title">{{ user.name }}</h3>
    <p class="user-card__status">Status: {{ status }}</p>
    <p class="user-card__count">Count: {{ count }}</p>
    <button @click="updateUser" class="user-card__button">
      Update User
    </button>
  </div>
